
/* Confirm action */
ConfirmActionScreen {
    align: center middle;
    background: rgba(0,0,0,0.7)
}

ConfirmActionScreen #question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

ConfirmActionScreen #dialog {
    width: 90%;
    height: 11;

    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;

    border: thick $background 80%;
    background: $surface;
}

ConfirmActionScreen Button {
    width: 100%;
}
